<form action="/pokemon" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" name="name">
  </div>
   <div>
    <label for="img">Image:</label>
    <input type="text" name="img">
  </div> 
   <div>
   <label for="type">Type:</label>
   <span>Fire</span><input type="radio" name="type" value="true" checked>
   <span>Water</span><input type="radio" name="type" value="false">
   <span>Ice</span><input type="radio" name="type" value="true" checked>
   <span>Other</span><input type="radio" name="type" value="false">
 </div>
  <div>
    <input type="submit" value="Add a New Pokemon">
  </div>
</form>

